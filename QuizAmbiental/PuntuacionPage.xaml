<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizAmbiental.PuntuacionPage"
             BackgroundColor="#90EE90">

    <VerticalStackLayout Padding="40" Spacing="20" HorizontalOptions="Center">

        <Label Text="TABLA DE CLASIFICACIÓN" 
               FontSize="28"
               TextColor="#3E8C62"
               HorizontalOptions="Center"/>

        <Frame CornerRadius="15" BackgroundColor="white" Padding="15">
            <VerticalStackLayout x:Name="rankingListPuntuacion" Spacing="15">
                <!-- Las entradas se agregarán automaticamente aqui -->
            </VerticalStackLayout>
        </Frame>

        <!-- Botón para volver al menú principaal -->
        <Button Text="Volver"
                BackgroundColor="#FFF000"
                TextColor="black"
                WidthRequest="150"
                Clicked="OnVolverClicked"/>
    </VerticalStackLayout>
</ContentPage>