<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizAmbiental.ScorePage"
             BackgroundColor="#90EE90"
             NavigationPage.HasNavigationBar="False">
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20" HorizontalOptions="Center">

            <!-- Detalles del puntaje -->
            <Label x:Name="lblScore" 
             Text="Tu puntaje" 
             FontSize="28" 
             TextColor="#3E8C62" 
             HorizontalOptions="Center"/>
            <Label x:Name="lblTime" 
             Text="Tiempo:" 
             FontSize="24" 
             TextColor="black" 
             HorizontalOptions="Center"/>

            <Frame CornerRadius="15" 
             BackgroundColor="white" 
             Padding="15">
                <VerticalStackLayout x:Name="rankingList" 
                             Spacing="15">
                </VerticalStackLayout>
            </Frame>

            <Button Text="Regresar al MenÃº" 
              Clicked="OnReturnClicked" 
              BackgroundColor="#2E8B57" 
              TextColor="White" 
              WidthRequest="200"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>