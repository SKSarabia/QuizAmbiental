<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizAmbiental.QuizPage"
             BackgroundColor="DarkBlue">

    <FlexLayout Direction="Column" AlignItems="Center" Padding="20">

        <!-- Tabla de clasificación -->
        <Frame CornerRadius="10" BackgroundColor="Black" Padding="10" WidthRequest="280" Margin="0,0,0,20">
            <VerticalStackLayout>
                <Label Text="Top Jugadores" FontSize="20" TextColor="White" HorizontalOptions="Center"/>
                <Label Text="1. TANK89 - 980 Pts" TextColor="White"/>
                <Label Text="2. ROCK102 - 870 Pts" TextColor="White"/>
                <Label Text="3. MAYONESO77 - 750 Pts" TextColor="White"/>
                <Label Text="4. ING.LOCO1920 - 710 Pts" TextColor="White"/>
            </VerticalStackLayout>
        </Frame>

        <!-- Selección de dificultad -->
        <Label Text="ESCOGE TU DIFICULTAD" FontSize="22" TextColor="White" HorizontalOptions="Center" Margin="0,10,0,10"/>

        <VerticalStackLayout Margin="0,0,0,20">
            <Button x:Name="btnFacil" Text="Fácil"
                BackgroundColor="Gray"
                TextColor="Black"
                WidthRequest="150"
                Margin="0,5,0,5"
                Clicked="OnDificultadSeleccionada"/>

            <Button x:Name="btnMedio" Text="Medio"
                BackgroundColor="Gray"
                TextColor="Black"
                WidthRequest="150"
                Margin="0,5,0,5"
                Clicked="OnDificultadSeleccionada"/>

            <Button x:Name="btnDificil" Text="Difícil"
                BackgroundColor="Gray"
                TextColor="Black"
                WidthRequest="150"
                Margin="0,5,0,5"
                Clicked="OnDificultadSeleccionada"/>
        </VerticalStackLayout>

        <!-- Botón comenzar -->
        <Button x:Name="btnComenzar"
            Text="Comenzar"
            BackgroundColor="White"
            TextColor="Black"
            IsEnabled="False"
            Clicked="OnComenzarQuiz"
            WidthRequest="180"
            Margin="0,20,0,0"/>
    </FlexLayout>
</ContentPage>