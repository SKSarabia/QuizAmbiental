<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizAmbiental.LoginPage"
             Title="Iniciar Sesión"
             BackgroundColor="#90EE90">
    <VerticalStackLayout Padding="20" Spacing="20" HorizontalOptions="Center">
        <Label Text="Iniciar Sesión" FontSize="28" FontAttributes="Bold" TextColor="#3E8C62" HorizontalOptions="Center"/>
        <Entry x:Name="usernameEntry" Placeholder="Usuario o código admin" FontSize="18" WidthRequest="250"/>
        <Button Text="Entrar" Clicked="OnEntrarClicked" BackgroundColor="#2E8B57" TextColor="White" WidthRequest="250"/>
        <Button Text="Volver" Clicked="OnVolverClicked" BackgroundColor="#3E8C62" TextColor="White" WidthRequest="250"/>
    </VerticalStackLayout>
</ContentPage>